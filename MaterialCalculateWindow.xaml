<Window x:Class="MDK0401Pr2.MaterialCalculateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDK0401Pr2"
        mc:Ignorable="d"
        FontFamily="Gabriola"
        Icon="/Resources/OurDecor.ico"
        WindowStartupLocation="CenterOwner"
        Title="Расчет закупки материалов" Height="500" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Grid Grid.Row="0" Background="#BBD9B2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <Image Width="45" Height="45" Source="/Resources/OurDecor.png"/>
                <TextBlock Text="Расчет закупки материалов" FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Основной контент с прокруткой -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="15">

                <!-- Заголовок -->
                <TextBlock Text="{Binding WindowTitle}" 
                           FontSize="16" FontWeight="Bold" Margin="0,0,0,15"
                           HorizontalAlignment="Center"/>

                <!-- Материал -->
                <TextBlock Text="Материал:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="CmbMaterial" DisplayMemberPath="MaterialName"
                         Margin="0,0,0,10" SelectionChanged="CmbMaterial_SelectionChanged"
                         ToolTip="Выберите материал для расчета"/>

                <!-- Количество продукции -->
                <TextBlock Text="Количество продукции:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtProductionQuantity" Margin="0,0,0,10"
                        PreviewTextInput="IntegerTextBox_PreviewTextInput"
                        ToolTip="Введите целое количество продукции для производства"/>

                <!-- Параметры продукции -->
                <TextBlock Text="Параметры продукции:" FontWeight="SemiBold" Margin="0,10,0,5"
                           HorizontalAlignment="Center" FontSize="12"/>

                <TextBlock Text="Параметр 1" Margin="20,0,0,5"/>
                <TextBox x:Name="TxtParameter1" Margin="20,0,0,10"
                        PreviewTextInput="DecimalTextBox_PreviewTextInput"
                        ToolTip="Используется для материалов, измеряемых в рул, кг, л"/>

                <TextBlock Text="* Для обоев, тканей, пленок - длина рулона/отреза" 
                          FontStyle="Italic" Foreground="Gray" Margin="25,0,0,5" FontSize="11"/>
                <TextBlock Text="* Для красок, клеев - не используется (введите 1)" 
                          FontStyle="Italic" Foreground="Gray" Margin="25,0,0,10" FontSize="11"/>

                <TextBlock Text="Параметр 2:" Margin="20,0,0,5"/>
                <TextBox x:Name="TxtParameter2" Margin="20,0,0,10"
                        PreviewTextInput="DecimalTextBox_PreviewTextInput"
                        ToolTip="Введите длину изделия в метрах. Используется для материалов, измеряемых в рул, кг, л"/>

                <TextBlock Text="* Для обоев, тканей - ширина рулона" 
                          FontStyle="Italic" Foreground="Gray" Margin="25,0,0,5" FontSize="11"/>
                <TextBlock Text="* Для штучных материалов - не используется (введите 1)" 
                          FontStyle="Italic" Foreground="Gray" Margin="25,0,0,10" FontSize="11"/>

                <!-- Материал на складе -->
                <TextBlock Text="Материал на складе:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBox x:Name="TxtStockQuantity" Margin="0,0,0,15"
                        PreviewTextInput="DecimalTextBox_PreviewTextInput"
                        ToolTip="Введите количество материала на складе"/>

                <!-- Кнопка расчета -->
                <Button x:Name="BtnCalculate" Content="Рассчитать" 
                       Width="120" Height="30" HorizontalAlignment="Center" Margin="0,0,0,15"
                       Click="BtnCalculate_Click" Background="#2D6033" Foreground="White"
                       ToolTip="Рассчитать необходимое количество материала для закупки"/>

                <!-- Результат -->
                <Border Background="#F0F8FF" BorderBrush="#BBD9B2" BorderThickness="1"
                       Margin="0,0,0,10" Padding="10" CornerRadius="5">
                    <TextBlock x:Name="TxtResult" FontWeight="Bold" Foreground="#2D6033"
                              TextWrapping="Wrap" TextAlignment="Center"
                              Visibility="Collapsed"/>
                </Border>

                <!-- Пояснение параметров -->
                <TextBlock Text="* Параметры продукции используются для расчета расхода материала на единицу продукции" 
                           FontStyle="Italic" Foreground="Gray" TextWrapping="Wrap" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
