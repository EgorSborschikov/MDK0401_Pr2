<Window x:Class="MDK0401Pr2.ProductsMaterialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDK0401Pr2"
        mc:Ignorable="d"
        Icon="/Resources/OurDecor.ico"
        FontFamily="Gabriola"
        Title="Список материалов" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#BBD9B2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <Image Width="45" Height="45" Source="/Resources/OurDecor.png"/>
                <TextBlock Text="Список материалов" FontSize="18" FontWeight="Bold" 
                   VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
            <TextBlock Text="Продукт: " FontWeight="SemiBold"/>
            <TextBlock Text="{Binding ProductName}" Margin="5,0,20,0"/>
            <TextBlock Text="Артикул: " FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Articul}" Margin="5,0,20,0"/>
            <TextBlock Text="Тип продукта: " FontWeight="SemiBold"/>
            <TextBlock Text="{Binding ProductType}" Margin="5,0,20,0"/>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="MaterialsGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование материала"
                                    Binding="{Binding MaterialName}"
                                    Width="*"/>
                <DataGridTextColumn Header="Тип материала"
                    Binding="{Binding MaterialType}"
                    Width="150"/>
                <DataGridTextColumn Header="Единица измерения"
                    Binding="{Binding UnitOfMeasure}"
                    Width="120"/>
                <DataGridTextColumn Header="Требуемое количество"
                    Binding="{Binding RequiredQuantity}"
                    Width="120"/>
                <DataGridTextColumn Header="Цена за единицу"
                    Binding="{Binding UnitPrice, StringFormat={}{0:N2} руб}"
                    Width="120"/>
                <DataGridTextColumn Header="Общая стоимость"
                    Binding="{Binding TotalCost, StringFormat={}{0:N2} руб}"
                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnCalculate" Content="Рассчитать закупку" 
                   Background="#2D6033" Foreground="White"
                   Width="140" Height="30" Margin="0,0,10,0"
                   Click="BtnCalculate_Click"
                   ToolTip="Рассчитать необходимое количество материалов для производства"/>
            <Button x:Name="BtnClose" Content="Закрыть" 
                   Width="80" Height="30"
                   Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
